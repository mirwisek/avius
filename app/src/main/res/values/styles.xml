<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="HappyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="SubmitButton" parent="HappyButton">
        <item name="backgroundTint">@color/teal_light</item>
    </style>

    <style name="FragmentQuestionGestureButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="layoutPadding">5dp</item>
        <item name="marginCircle">@dimen/margin_circle_f_question</item>
        <item name="marginProgress">4dp</item>
        <item name="thumbPadding">@dimen/thumb_padding_gesture_btn_f_question</item>
        <item name="layout_constraintVertical_bias">0.6</item>
    </style>

    <style name="GestureButtonLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubscribeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/blue_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="FragmentStartBGStyle">
        <item name="background">@color/bg</item>
        <item name="android:background">@color/bg</item>
    </style>
</resources>