<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FragmentQuestionGestureButton">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">340dp</item>
        <item name="layoutPadding">25dp</item>
        <item name="shadowRadius">140dp</item>
        <item name="progressThicknessRatio">30</item>
        <item name="progressInnerRadiusRatio">2.5</item>
        <item name="marginCircle">@dimen/margin_circle_f_question</item>
        <item name="thumbPadding">@dimen/thumb_padding_gesture_btn_f_question</item>
    </style>

    <style name="SubscribeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/blue_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="RestartTitle" parent="SubscribeTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="GestureButtonLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>